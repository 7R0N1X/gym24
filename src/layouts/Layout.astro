---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Discover Gym24, your destination for a healthy and active lifestyle! We offer a wide range of services, from personalized workouts to group classes, to help you reach your fitness goals - join us today and start your journey to a fitter and healthier life with Gym24!"
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-black">
    <slot />
  </body>
</html>
