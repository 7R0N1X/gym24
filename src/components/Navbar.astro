---
import "@fontsource/bruno-ace-sc";
import "@fontsource/kanit/300.css";
---

<nav class="w-full max-w-[1169px] flex justify-between items-center p-5 fixed top-0 z-20" id="miNav">
  <a href="#" class="text-2xl text-white" id="logo">GYM<span class="text-[#faff00]">24</span></a  >

  <!-- Botón del menú desplegable -->
  <button type="button" class="text-white lg:hidden" id="btn-menu">
    <svg fill="none" aria-hidden="true" class="w-6 h-6" viewBox="0 0 17 14">
      <path
        stroke="currentColor"
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M1 1h15M1 7h15M1 13h15"></path>
    </svg>
  </button>

  <!-- Menú desplegable -->
  <ul id="list-menu" class="hidden bg-[#00000098] lg:bg-transparent w-full lg:w-auto max-lg:absolute top-12 left-0 px-5 lg:px-0 lg:flex">
    <li><a href="#" class="text-white border-b lg:border-none block py-4 lg:mr-[75px]">Ventajas</a></li>
    <li><a href="#" class="text-white border-b lg:border-none block py-4 lg:mr-[75px]">Membresía</a></li>
    <li><a href="#" class="text-white border-b lg:border-none block py-4 lg:mr-[75px]">Sobre nosotros</a></li>
    <li><a href="#" class="text-white block py-4">Entrenadores</a></li>
  </ul>
</nav>

<script>
  const btnMenu = document.getElementById("btn-menu");
  const listMenu = document.getElementById("list-menu");

  btnMenu.addEventListener("click", function () {
    listMenu.classList.toggle("hidden");
  });

  window.addEventListener('scroll', function() {
  var nav = document.getElementById('miNav');
  var scrollPosition = window.scrollY;
  
  if (scrollPosition > 0) {
    nav.classList.add('backdrop-blur-sm');
  } else {
    nav.classList.remove('backdrop-blur-sm');
  }
});

</script>

<style>
  #logo {
    font-family: "Bruno Ace SC", system-ui;
  }

  ul li a {
    font-family: "Kanit", sans-serif;
  }
</style>
