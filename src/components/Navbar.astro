---
import "@fontsource/bruno-ace-sc";
import "@fontsource/kanit/300.css";
---

<nav
  class="w-screen max-w-[1169px] flex justify-between items-center px-10 py-5 m-auto relative z-20"
>
  <a href="#" class="text-2xl text-white" id="logo"
    >GYM<span class="text-[#faff00]">24</span></a
  >

  <!-- Botón del menú desplegable -->
  <button type="button" class="text-white lg:hidden" id="btn-menu">
    <svg fill="none" aria-hidden="true" class="w-6 h-6" viewBox="0 0 17 14">
      <path
        stroke="currentColor"
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M1 1h15M1 7h15M1 13h15"></path>
    </svg>
  </button>

  <!-- Menú desplegable -->
  <ul
    id="list-menu"
    class="hidden w-full lg:w-auto max-lg:absolute top-12 left-0 px-10 [&>li>a]:block [&>li>a]:py-4 mt-1 lg:flex sm:gap-[75px] [&>li>a]:text-white bg-[#00000098] lg:bg-transparent"
  >
    <li><a href="#" class="border-b lg:border-none">Ventajas</a></li>
    <li><a href="#" class="border-b lg:border-none">Membresía</a></li>
    <li><a href="#" class="border-b lg:border-none">Sobre nosotros</a></li>
    <li><a href="#">Entrenadores</a></li>
  </ul>
</nav>

<script>
  const btnMenu = document.getElementById("btn-menu");
  const listMenu = document.getElementById("list-menu");

  btnMenu.addEventListener("click", function () {
    listMenu.classList.toggle("hidden");
  });
</script>

<style>
  #logo {
    font-family: "Bruno Ace SC", system-ui;
  }

  ul li a {
    font-family: "Kanit", sans-serif;
  }
</style>
