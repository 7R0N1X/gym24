---
import "@fontsource/kanit";
import Button from "./Button.astro";
---

<section class="background h-[480px] md:h-[791px] w-screen absolute top-0 z-10 flex flex-col items-center">
  <div
    class="h-full w-full max-w-[1169px] px-10 flex flex-col justify-center items-center lg:items-start"
  >
    <h1 class="text-white text-center lg:text-start text-3xl sm:text-5xl lg:text-6xl leading-10 mb-7 sm:w-[400px] lg:w-[500px]">
      Sesión de prueba gratuita con un entrenador
    </h1>
    <Button href="#" name="Más información" />
  </div>
  <style>
    .background {
      background: url("/background.png") no-repeat center/cover;
    }

    h1 {
      font-family: "Kanit", sans-serif;
    }
  </style>
</section>
