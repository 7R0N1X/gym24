---
import "@fontsource/kanit";
import "@fontsource/bruno-ace-sc";
import Instagram from "./social-network-icons/instagram.astro";
import Facebook from "./social-network-icons/facebook.astro";
import Twitter from "./social-network-icons/twitter.astro";
import Youtube from "./social-network-icons/youtube.astro";

---

<footer class="max-w-[1169px] flex flex-col gap-7 sm:flex-row lg:gap-20">

  <section class="text-white text-center hidden sm:block w-[400px] max-lg:w-[300px] sm:text-left">
    <h3 id="logo" class="text-2xl">GYM<span class="text-[#faff00]">24</span></h3>
    <p class="text-sm mt-2">
      Consigue fuerza y confianza en nuestro gimnasio con equipos de última
      generación, entrenamiento personalizado y una comunidad motivadora.</p>
  </section>

  <section class="text-white text-center sm:text-left">
    <h3 class="text-lg">Dirección</h3>
    <p class="text-sm mt-2">República de Bielorrusia <br /> Ciudad de Minsk <br /> Avenida Dzerzhinsky 15</p>
  </section>

  <section class="text-white text-center flex flex-col justify-center items-center sm:items-start">
    <h3 class="text-lg">Contacto</h3>
    <p class="flex text-sm mt-2"><img src="/icon-call.svg" alt="Icono de llamada" class="mr-2 mb-1 size-5"/>+375(44)-777-24-12</p>
    <p class="flex text-sm"><img src="/icon-email.svg" alt="Icono de correo electrónico" class="mr-2 size-5" />gym24@gmail.com</p>

    <section class="flex gap-3 my-5">
      <a href="https://www.instagram.com/tronix.dev" target="_blank" class="hover:text-[#faff00]"><Instagram class="size-10 sm:size-8" /></a>
      <a href="#" target="_blank" class="hover:text-[#faff00]"><Facebook class="size-10 sm:size-8"/></a>
      <a href="#" target="_blank" class="hover:text-[#faff00]"><Twitter class="size-10 sm:size-8"/></a>
      <a href="#" target="_blank" class="hover:text-[#faff00]"><Youtube class="size-10 sm:size-8"/></a>
    </section>
  </section>

</footer>

<style>
  #logo {
    font-family: "Bruno Ace SC", system-ui;
  }

  h3 {
    font-family: "Kanit", sans-serif;
  }
</style>
